<h3 class="typewriter_cream page_heading">Add a new experience</h3>
<div id="rule_cream"></div>
<div id="rule_black"></div>
<div id="rule_cream"></div>
<br>

<div class="col"><p> </p></div>

<div class="col_middle">
  <br>
  <% if flash.has?(:message) %>
    <br>
    <h6 class="sans_cream flash"><%= flash[:message] %></h6>
  <% end %>
  <br>
  <form action="/experiences" method="POST">
    <h6 class="sans_cream"><label for="experience_name">Experience Name: </label>
    <input type="text" id="experience_name" name="name"></h6>
    <h6 class="sans_cream"><label>Location: </label><br></h6>
    <p class="typewriter_black"><label for="city">City: </label>
    <input type="text" id="city" name="city"></p>
    <p class="typewriter_black"><label for="country">Country: </label>
    <input type="text" id="country" name="country"></p>
    <br>
    <h6 class="sans_cream"><label>Bucketlist:</label><br></h6>
    <div>
      <p class="typewriter_black"><input type="radio" id="life" name="bucketlist" value="Life"> Life Bucketlist </input><br></p>
      <p class="typewriter_black"><input class="typewriter_black" type="radio" id="spring" name="bucketlist" value="Spring"> Spring Bucketlist </input><br></p>
      <p class="typewriter_black"><input class="typewriter_black" type="radio" id="summer" name="bucketlist" value="Summer"> Summer Bucketlist </input><br></p>
      <p class="typewriter_black"><input class="typewriter_black" type="radio" id="fall" name="bucketlist" value="Fall"> Fall Bucketlist </input><br></p>
      <p class="typewriter_black"><input class="typewriter_black" type="radio" id="winter" name="bucketlist" value="Winter"> Winter Bucketlist </input><br></p>
    </div>
    <br>
    <br>
    <input class="sans_brown submit" type="submit" id="add_experience" value="Add to my bucketlist">
  </form>
  <br>
  <br>
</div>

<div class="col"></div>
