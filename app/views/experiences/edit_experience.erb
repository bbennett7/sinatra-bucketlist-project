<h3 class="typewriter_cream page_heading">Edit this experience</h3>
<div id="rule_cream"></div>
<div id="rule_black"></div>
<div id="rule_cream"></div>
<br>

<div class="col"><p> </p></div>

<div class="col_middle_with_header">

  <h3 class="typewriter_cream"><%=@experience.name%></h3>
  <h5 class="typewriter_cream"><%=@experience.location.city%>, <%=@experience.location.country%></h5>
  <h5 class="typewriter_cream"><%=@experience.bucketlist%> Bucketlist</h5>
  <br>
</div>

<div class="col_middle">
  <% if flash.has?(:message) %>
    <br>
    <h6 class="sans_cream flash"><%= flash[:message] %></h6>
  <% end %>
  <br>
  <br>
  <form action="/experiences/<%=@experience.slug%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <h6 class="sans_cream"><label for="experience_name">Experience Name: </label>
    <input type="text" id="experience_name" name="name"></h6>
    <h6 class="sans_cream"><label>Location </label></h6>
    <p class="typewriter_black"><label for="city">City: </label>
    <input type="text" id="city" name="city"></p>
    <p class="typewriter_black"><label for="country">Country: </label>
    <input type="text" id="country" name="country"></p>
    <br>
    <h6 class="sans_cream"><label>Bucketlist:</label><br></h6>
    <div>
      <p class="typewriter_black"><input type="radio" id="life" name="bucketlist" value="Life"> Life Bucketlist </input><br></p>
      <p class="typewriter_black"><input type="radio" id="spring" name="bucketlist" value="Spring"> Spring Bucketlist </input><br></p>
      <p class="typewriter_black"><input type="radio" id="summer" name="bucketlist" value="Summer"> Summer Bucketlist </input><br></p>
      <p class="typewriter_black"><input type="radio" id="fall" name="bucketlist" value="Fall"> Fall Bucketlist </input><br></p>
      <p class="typewriter_black"><input type="radio" id="winter" name="bucketlist" value="Winter"> Winter Bucketlist </input><br></p>
    </div>
    <br>
    <br>
    <input class="sans_brown submit" type="submit" id="edit_experience" value="Edit experience">
  </form>
  <br>
  <br>
</div>

<div class="col"><p> </p></div>
