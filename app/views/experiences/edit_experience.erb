<h2>Edit this experience:</h2>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h3><%=@experience.name%></h3>
<h4><%=@experience.location.city%>, <%=@experience.location.country%></h4>
<h4><%=@experience.bucketlist%> Bucketlist</h4>

<form action="/experiences/<%=@experience.slug%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="experience_name">Experience Name: </label>
  <input type="text" id="experience_name" name="name">
  <br>
  <br>
  <label>Location: </label><br>
  <label for="city">City: </label>
  <input type="text" id="city" name="city">
  <label for="country">Country: </label>
  <input type="text" id="country" name="country">
  <br>
  <br>
  <label>Bucketlist:</label><br>
  <div>
    <input type="radio" id="life" name="bucketlist" value="Life"> Life Bucketlist </input><br>
    <input type="radio" id="spring" name="bucketlist" value="Spring"> Spring Bucketlist </input><br>
    <input type="radio" id="summer" name="bucketlist" value="Summer"> Summer Bucketlist </input><br>
    <input type="radio" id="fall" name="bucketlist" value="Fall"> Fall Bucketlist </input><br>
    <input type="radio" id="winter" name="bucketlist" value="Winter"> Winter Bucketlist </input><br>
  </div>
  <br>
  <input type="submit" id="edit_experience" value="Edit experience">
</form>
